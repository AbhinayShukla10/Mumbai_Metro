<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:weightSum="2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                app:cardCornerRadius="12dp"
                android:id="@+id/schedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:elevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/type_img"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/line1_background" />
                    <ImageView
                        android:id="@+id/shadow"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="#CD0064B7"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_marginBottom="20dp"
                        android:padding="25dp"
                        android:layout_alignBottom="@+id/schedule_text"
                        android:layout_height="wrap_content"
                        android:src="@drawable/schedule_icon"/>

                    <TextView
                        android:id="@+id/schedule_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/type_img"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="15dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="Schedule"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                app:cardCornerRadius="12dp"
                android:id="@+id/fare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:elevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/type_img1"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/line1_background" />
                    <ImageView
                        android:id="@+id/shadow1"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="#CD0064B7"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_marginBottom="20dp"
                        android:padding="25dp"
                        android:layout_alignBottom="@+id/fareroutetext"
                        android:layout_height="wrap_content"
                        android:src="@drawable/fare_route_icon"/>

                    <TextView
                        android:id="@+id/fareroutetext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/type_img1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="15dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="Fare and Route"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                app:cardCornerRadius="12dp"
                android:id="@+id/maps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:elevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/type_img11"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/line1_background" />
                    <ImageView
                        android:id="@+id/shadow11"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="#CD0064B7"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_marginBottom="20dp"
                        android:padding="25dp"
                        android:layout_alignBottom="@+id/maps_text"
                        android:layout_height="wrap_content"
                        android:src="@drawable/maps_icon"/>

                    <TextView
                        android:id="@+id/maps_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/type_img11"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="15dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="Maps"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                app:cardCornerRadius="12dp"
                android:id="@+id/card_recharge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:elevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/type_img111"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/line1_background" />
                    <ImageView
                        android:id="@+id/shadow1111111"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="#CD0064B7"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_marginBottom="20dp"
                        android:padding="25dp"
                        android:layout_alignBottom="@+id/recharge_text"
                        android:layout_height="wrap_content"
                        android:src="@drawable/card_recharge_icon"/>

                    <TextView
                        android:id="@+id/recharge_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/type_img111"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="15dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="Card Recharge"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>




    <com.google.android.material.navigation.NavigationView
        app:headerLayout="@layout/header"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        app:itemTextColor="@color/white"
        app:itemIconTint="@color/white"
        app:menu="@menu/drawer_menu"
        android:layout_gravity="start"
        android:id="@+id/drawer_nav"
        android:backgroundTint="@color/colorPrimaryDark"
        >
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>